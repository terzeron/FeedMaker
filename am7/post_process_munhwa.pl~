#!/usr/bin/env perl

use English;
use strict;
use warnings;
use Carp;
use Modern::Perl;
use FeedMaker;


sub main
{
	my $img_prefix = "";
	my $img_index = -1;

	while (my $line = <STDIN>) {
		chomp $line;
		if ($line =~ m!<img src='(/data/file/series/[^']\.jpg)'!) {
			print "<img src='http://am7.munhwa.com" . $1 . "' width='100%'/>\n";
		}
	}
}	


main();
